<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_raw"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:id="@+id/card_background_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_color_background_sky"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox_raw"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/roundedcheckbox"
                android:drawableTint="@color/white"
                android:buttonTint="@color/white"/>

            <TableLayout
                android:id="@+id/tableLayout_example"
                style="@style/TableViewScrollerStyle">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/HeaderTopCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Header"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        app:fontFamily="@font/myfonts" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/HeaderFirstRowCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First row"
                        android:textColor="@color/white"
                        app:fontFamily="@font/myfonts" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/HeaderSecondRowCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Second row"
                        android:textColor="@color/white"
                        app:fontFamily="@font/myfonts" />
                </TableRow>
            </TableLayout>

            <ImageButton
                android:id="@+id/imageButton_raw"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="more_button"

                app:backgroundTint="#0000"
                app:tint="@color/white"
                app:icon="@drawable/ic_baseline_more_vert_24"
                app:srcCompat="@drawable/ic_baseline_more_vert_24"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>