    <LinearLayout
        android:id="@+id/top_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/body_scroller_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/active_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="active_enable"
                    android:text="Active"
                    android:textColor="@color/red" />

                <Button
                    android:id="@+id/completed_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="active_disable"
                    android:text="Completed" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textColor="@color/red"/>

            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="vertical"
        android:id="@+id/body_scroller_main"
        app:layout_constraintBottom_toTopOf="@+id/footer_vertical_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_slider">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top">

            <LinearLayout
                android:id="@+id/linear_list_cardviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_scroller"
                    android:layout_width="350dp"

                    android:layout_height="match_parent"
                    tools:listitem="@layout/show_card_of_task" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/footer_vertical_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/home_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/rounded_corners"
                    android:clickable="true"
                    app:backgroundTint="@color/background"
                    android:contentDescription="home_button"
                    android:onClick="add_card"
                    app:cornerRadius="50dp"
                    app:srcCompat="@drawable/ic_baseline_home_24"
                    app:tint="@color/red" />

                <ImageButton
                    android:id="@+id/home_button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="70dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/rounded_corners"
                    android:clickable="true"
                    android:contentDescription="home_button"
                    android:onClick="add_card_real"
                    app:backgroundTint="@color/red"
                    app:cornerRadius="50dp"
                    app:srcCompat="@drawable/ic_baseline_add_24"
                    app:tint="@color/white" />


                <ImageButton
                    android:id="@+id/settings_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/rounded_corners"
                    android:clickable="true"
                    android:contentDescription="settings_button"
                    android:onClick="go_to_settings_button"
                    app:backgroundTint="@color/background"
                    app:srcCompat="@drawable/ic_baseline_settings_24"
                    app:tint="@color/grey_settings" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>