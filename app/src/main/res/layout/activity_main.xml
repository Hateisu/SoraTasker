<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brighter_background"
    android:backgroundTint="@color/brighter_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout_TopHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/active_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="active_enable"
                    android:text="Active"
                    android:textColor="@color/red" />

                <Button
                    android:id="@+id/completed_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="active_disable"
                    android:text="Completed" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button3"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All"
                    android:textColor="@color/red" />


            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_bottomFooter"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_TopHeader"
        tools:layout_editor_absoluteX="29dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/itemlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:listitem="@layout/show_card_of_task" />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_bottomFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/home_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/rounded_corners"
                    android:clickable="true"
                    android:contentDescription="home_button"
                    android:onClick="add_card"
                    app:backgroundTint="@color/background"
                    app:cornerRadius="50dp"
                    app:srcCompat="@drawable/ic_baseline_home_24"
                    app:tint="@color/red" />

                <ImageButton
                    android:id="@+id/home_button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="70dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/rounded_corners"
                    android:clickable="true"
                    android:contentDescription="home_button"
                    android:onClick="add_card_real"
                    app:backgroundTint="@color/red"
                    app:cornerRadius="50dp"
                    app:srcCompat="@drawable/ic_baseline_add_24"
                    app:tint="@color/white" />


                <ImageButton
                    android:id="@+id/settings_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/rounded_corners"
                    android:clickable="true"
                    android:contentDescription="settings_button"
                    android:onClick="go_to_settings_button"
                    app:backgroundTint="@color/background"
                    app:srcCompat="@drawable/ic_baseline_settings_24"
                    app:tint="@color/grey_settings" />

            </TableRow>

        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>