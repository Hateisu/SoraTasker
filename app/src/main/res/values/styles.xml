<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardViewScrollerStyle" >
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="cardCornerRadius">15dp</item>
    </style>
    <style name="CheckBoxScrollerStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@drawable/roundedcheckbox</item>
    </style>
    <style name="LinearLayoutScrollerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ImageButtonMoreStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">more_button</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="backgroundTint">#0000</item>
        <item name="srcCompat">@drawable/ic_baseline_more_vert_24</item>
        <item name="tint">@color/white</item>
        <item name="icon">@drawable/ic_baseline_more_vert_24</item>
    </style>
    <style name="TableViewScrollerStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="mySpinnerItemStyle" >
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/background</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#ffffff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="Theme.Custom" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">

            <item name="android:textSize">18sp</item>
            <item name="android:textColor">@color/white</item>

        <item name="android:weekNumberColor">@color/red</item>

    </style>
    <style name="text_white">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>